{
  "name": "sigi",
  "version": "0.0.0",
  "description": "Well designed effect management framenwork for complex frontend app ",
  "main": "none",
  "repository": "git@github.com:sigi-framework/sigi.git",
  "author": "lynweklm@gmail.com",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.0",
    "@types/react-dom": "^16.9.5",
    "@types/react-test-renderer": "^16.9.2",
    "@types/sinon": "^7.5.2",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "codecov": "^3.6.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "lodash": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-test-renderer": "^16.13.0",
    "reflect-metadata": "^0.1.13",
    "rollup": "^2.0.3",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "rxjs": "^6.5.4",
    "shx": "^0.3.2",
    "sinon": "^9.0.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3",
    "vue": "^2.6.11"
  },
  "scripts": {
    "build": "run-s clean build:esm build:next build:bundle clean:js clean:next clean:tests",
    "build:esm": "tsc -b ./configs/tsconfig.project.json",
    "build:next": "tsc -b ./configs/tsconfig.next.json",
    "build:bundle": "rollup --config ./configs/rollup.config.js",
    "clean": "shx rm -rf ./packages/**/*.tsbuildinfo && shx rm -rf ./packages/**/{esm,dist}",
    "clean:js": "shx rm -rf './packages/**/esm/**/*.{js,map}'",
    "clean:next": "shx rm -rf ./packages/**/next",
    "clean:tests": "shx rm -rf './packages/**/esm/**/__tests__'",
    "lint": "eslint . -c ./.eslintrc.yml 'packages/**/*.{ts,tsx}' './configs/**/*.js'",
    "test": "jest --config ./configs/jest.config.js --collectCoverage",
    "test:type": "tsc -b ./configs/tsconfig.type-test.json -verbose"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "prettier --write",
      "eslint -c .eslintrc.yml --fix"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
